<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hewei.task.dao.TaskDetailDao">

    <resultMap type="cn.hewei.task.entity.TaskDetail" id="TaskDetailMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="taskId" column="task_id" jdbcType="INTEGER"/>
        <result property="keyword" column="keyword" jdbcType="VARCHAR"/>
        <result property="count" column="count" jdbcType="INTEGER"/>
        <result property="sku" column="sku" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="NUMERIC"/>
        <result property="createdTime" column="created_time" jdbcType="TIMESTAMP"/>
        <result property="updatedTime" column="updated_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TaskDetailMap">
        select
          id, task_id, keyword, count, sku, price, created_time, updated_time
        from taobao_task.task_detail
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TaskDetailMap">
        select
          id, task_id, keyword, count, sku, price, created_time, updated_time
        from taobao_task.task_detail
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TaskDetailMap">
        select
          id, task_id, keyword, count, sku, price, created_time, updated_time
        from taobao_task.task_detail
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="taskId != null">
                and task_id = #{taskId}
            </if>
            <if test="keyword != null and keyword != ''">
                and keyword = #{keyword}
            </if>
            <if test="count != null">
                and count = #{count}
            </if>
            <if test="sku != null and sku != ''">
                and sku = #{sku}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="createdTime != null">
                and created_time = #{createdTime}
            </if>
            <if test="updatedTime != null">
                and updated_time = #{updatedTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into taobao_task.task_detail(task_id, keyword, count, sku, price, created_time, updated_time)
        values (#{taskId}, #{keyword}, #{count}, #{sku}, #{price}, #{createdTime}, #{updatedTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update taobao_task.task_detail
        <set>
            <if test="taskId != null">
                task_id = #{taskId},
            </if>
            <if test="keyword != null and keyword != ''">
                keyword = #{keyword},
            </if>
            <if test="count != null">
                count = #{count},
            </if>
            <if test="sku != null and sku != ''">
                sku = #{sku},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="createdTime != null">
                created_time = #{createdTime},
            </if>
            <if test="updatedTime != null">
                updated_time = #{updatedTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from taobao_task.task_detail where id = #{id}
    </delete>

</mapper>